<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.proj.newswave.DetailsActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="8dp"
                android:layout_margin="8dp">
                
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="6dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:textSize="26sp"
                        android:id="@+id/text_detail_title">

                    </TextView>
                    <ImageView
                        android:layout_width="match_parent"
                        android:src="@drawable/not_available"
                        android:layout_height="250dp"
                        android:scaleType="fitXY"
                        android:layout_marginTop="8dp"
                        android:id="@+id/img_detail_news">
                    </ImageView>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/text_detail_author"
                        android:layout_marginTop="6dp"
                        android:textSize="16sp"
                        android:textColor="@color/purple_500">

                    </TextView>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/text_detail_time"
                        android:layout_marginTop="6dp"
                        android:textSize="16sp"
                        android:textColor="@color/black">

                    </TextView>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="22sp"
                android:paddingStart="10dp"

                android:id="@+id/text_detail_detail"
                android:textColor="@color/black"
                android:layout_marginTop="8dp">

            </TextView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:id="@+id/text_detail_content"
                android:paddingStart="5dp"
                android:textColor="@color/black"
                android:layout_marginTop="8dp">

            </TextView>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Read More"
                android:layout_gravity="center_vertical|center_horizontal"
                android:textStyle="bold"
                android:id="@+id/readMore"
                android:textSize="18dp">

            </Button>

        </LinearLayout>

    </ScrollView>

</LinearLayout>